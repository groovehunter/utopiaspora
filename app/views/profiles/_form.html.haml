= form_for @profile do |f|
  -if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :diaspora_handle
    = f.text_field :diaspora_handle
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :image_url_small
    = f.text_field :image_url_small
  .field
    = f.label :image_url_medium
    = f.text_field :image_url_medium
  .field
    = f.label :birthday
    = f.date_select :birthday
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :bio
    = f.text_area :bio
  .field
    = f.label :searchable
    = f.check_box :searchable
  .field
    = f.label :person_id
    = f.number_field :person_id
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :full_name
    = f.text_field :full_name
  .actions
    = f.submit 'Save'
